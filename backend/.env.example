# ============================================
# Application Configuration
# ============================================
APP_ENVIRONMENT=development
APP_DEBUG=false
APP_LOG_LEVEL=INFO

# ============================================
# Authentication Configuration
# ============================================
JWT_SECRET_KEY=change-this-in-production-use-secrets.token_urlsafe-64
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30
PASSWORD_HASH_ROUNDS=12

# ============================================
# Database Configuration (Supabase)
# ============================================
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your-supabase-anon-key
SUPABASE_SERVICE_KEY=your-supabase-service-role-key

# Database Connection Pool Settings
MAX_RETRIES=3
TIMEOUT=30

# ============================================
# Vector Database Configuration (Pinecone)
# ============================================
PINECONE_API_KEY=your-pinecone-api-key
PINECONE_ENVIRONMENT=us-east-1-aws
PINECONE_INDEX_NAME=salesmate-products
PINECONE_DIMENSION=384
PINECONE_METRIC=cosine
PINECONE_CLOUD=aws
PINECONE_REGION=us-east-1

# Embedding Configuration
EMBEDDING_MODEL=all-MiniLM-L6-v2
EMBEDDING_BATCH_SIZE=32

# Indexing Configuration
ENABLE_AUTO_INDEXING=true

# Search Configuration
TOP_K=10
MIN_SCORE=0.7

# ============================================
# LLM Configuration
# ============================================
LLM_PROVIDER=gemini

# OpenAI Configuration
OPENAI_API_KEY=sk-your-openai-api-key
OPENAI_MODEL=gpt-4o
OPENAI_TEMPERATURE=0.7
OPENAI_MAX_TOKENS=300
OPENAI_TOP_P=0.9
OPENAI_FREQUENCY_PENALTY=0.0
OPENAI_PRESENCE_PENALTY=0.0
OPENAI_TIMEOUT=60
OPENAI_MAX_RETRIES=3

# Gemini Configuration
GEMINI_API_KEY=your-gemini-api-key
GEMINI_MODEL=gemini-2.0-flash
GEMINI_TEMPERATURE=0.7
GEMINI_MAX_TOKENS=8192
GEMINI_TOP_P=0.95
GEMINI_TOP_K=40
GEMINI_TIMEOUT=60
GEMINI_MAX_RETRIES=3

# ============================================
# Conversation Configuration
# ============================================
CONVERSATION_MAX_HISTORY_LENGTH=20
CONVERSATION_CONTEXT_WINDOW_MESSAGES=10
CONVERSATION_SESSION_TIMEOUT_MINUTES=30
CONVERSATION_GREETING_ENABLED=true
CONVERSATION_ENABLE_LOGGING=true
CONVERSATION_LOG_FORMAT=txt
CONVERSATION_TIMESTAMP_FORMAT=%Y-%m-%d %H:%M:%S

# ============================================
# Product Configuration
# ============================================
PRODUCT_RECOMMENDATION_LIMIT=5
PRODUCT_ENABLE_COMPARISON=true
PRODUCT_ENABLE_PRICE_DISCUSSION=true
PRODUCT_ENABLE_UPSELLING=true
PRODUCT_ENABLE_CROSS_SELLING=true
PRODUCT_MIN_CONFIDENCE_THRESHOLD=0.6
